<%- include ("./partials/_header.ejs") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %> " method="POST">
            <div class="form-group">
              <input
                type="text"
                class="form-control"
                name="title"
                placeholder="Insert a title"
                value="<%= task.title %> "
              />
            </div>
            <div class="form-group">
              <textarea
                name="description"
                id=""
                cols="50"
                rows="5"
                class="form-control"
                placeholder="Insert a description"
              >
<%= task.description%> </textarea
              >
            </div>
            <div class="form-group">
              <input
                type="submit"
                value="Update"
                class="btn btn-primary btn-block"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
