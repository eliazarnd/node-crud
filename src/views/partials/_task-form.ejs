<form action="/add" method="POST">
  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="title"
      placeholder="Insert a title"
      required
    />
  </div>
  <div class="form-group">
    <textarea
      name="description"
      id=""
      cols="50"
      rows="5"
      class="form-control"
      placeholder="Insert a description"
      required
    ></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="Add" class="btn btn-primary btn-block" />
  </div>
</form>
